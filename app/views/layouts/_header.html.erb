<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "FUKUQ", root_path, id: "logo" %>
    <nav>
    <div class="navbar-header">
        <button id="hamburger" type="button" class="navbar-toggle collapsed">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>
      <ul id="navbar-menu"
          class="nav navbar-nav navbar-right collapse navbar-collapse">
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "質問する", new_question_path %></li>
        <li><%= link_to "質問一覧", questions_path %></li>
      <% if logged_in? %>
        <% if current_user.admin? %>
          <li><%= link_to "ユーザー一覧", users_path %></li>
        <% end %>
        <li class="dropdown">
            <a href="#" id="account" class="dropdown-toggle">
              アカウント<b class="caret"></b>
            </a>
            <ul id="dropdown-menu" class="dropdown-menu">
              <li><%= link_to "プロフィール", current_user %></li>
              <% unless current_user.email == 'guest@example.com' %>
                <li><%= link_to "設定", edit_user_path(current_user) %></li>
              <% end %>
              <li class="divider"></li>
              <li>
                <%= link_to "ログアウト", logout_path,
                                       data: { "turbo-method": :delete } %>
              </li>
            </ul>
        </li>
        <% else %>
          <li><%= link_to "ゲストログイン", guest_login_path, data: { turbo_method: :post } %></li>
          <li><%= link_to "ログイン", login_path %></li>
          <li><%= link_to "新規登録", signup_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>