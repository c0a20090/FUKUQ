<% provide(:title, "ユーザー編集") %>
<h1>ユーザー編集</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render 'form' %>
    <div class="gravatar_edit withd">
      <%= gravatar_for @user %>
      <a href="https://gravatar.com/emails" target="_blank">変更</a>
    </div>
    <% if current_user?(@user) && !current_user.admin? %>
      <%= link_to "アカウントを削除する", @user, data: { "turbo-method": :delete, turbo_confirm: "削除してもよろしいですか？" }, class: 'btn btn-danger withdraw' %>
    <% end %>
  </div>
</div>