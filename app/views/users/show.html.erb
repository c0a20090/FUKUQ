<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
        <%= gravatar_for @user %>
        <h1><%= @user.name %></h1>
        <span><strong>質問数：</strong> <%= @user.questions.count %></span>
        <span><strong>回答数：</strong> <%= @user.answers.count %></span>
    </section>
    <section class="stats">
        <%= render 'shared/stats' %>
      </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.questions.any? %>
      <%= render 'shared/questions_search' %>
      <h3>質問</h3>
      <ol class="questions">
        <%= render @questions %>
      </ol>
      <%= paginate @questions, theme: 'twitter-bootstrap-4' %>
    <% end %>
  </div>
</div>