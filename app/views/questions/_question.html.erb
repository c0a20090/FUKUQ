<li id="question-<%= question.id %>">
  <%= link_to gravatar_for(question.user, size: 50), question.user %>
  <span class="user"><%= link_to question.user.name, question.user %></span>
  <span class="title"><%= link_to question.title, question %></span>
  <span class="timestamp">
    <%= time_ago_in_words(question.created_at) %>前
    <% if current_user?(question.user) %>
      <%= link_to "削除する", question, data: { "turbo-method": :delete,
                                               turbo_confirm: "削除してもよろしいですか？" } %>
    <% end %>
  </span>
</li>