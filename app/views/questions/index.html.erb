<% provide(:title, "質問一覧") %>
<h1>質問一覧</h1>

<%= form_tag questions_path, method: :get, class: 'boards__searchForm' do %>

  <div class="tag-box-around">
    <% @tags.each do |tag| %>
        <div class="tag-box">
          <%= link_to tag.name, questions_path(name: tag.id) %>
        </div>
    <% end %>
        <div class="tag-box">
          <%= link_to "全ての質問", questions_path %>
        </div>
  </div>

<ul class="questions">
  <% @questions.each do |question| %>
    <li>
      <%= link_to gravatar_for(question.user, size: 50), question.user %>
      <span class="user"><%= link_to question.user.name, question.user %></span>
      <span class="title"><%= link_to question.title, question %></span>
      <span>
      <% question.tags.each do |tag| %>
        <%= tag.name %>
      <% end %>
      </span>
      <span class="timestamp"><%= time_ago_in_words(question.created_at) %>前</span>
    </li>
  <% end %>
</ul>
<% end %>

<%= paginate @questions, theme: 'twitter-bootstrap-4' %>