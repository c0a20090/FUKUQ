<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
    </aside>
    <div class="col-md-8">
      <%= render 'shared/questions_search' %>
      <h3>フォロー中のユーザーの質問</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
<div class="center jumbotron">
  <h1>FUKUQ</h1>
  <h2>
    気になった服について質問できるQ&Aサービスです。
  </h2>
  <a class="mt-5"><%= link_to "詳しくはこちら>>",  about_path, class:"text-white", 'data-turbolinks': false %></a>
</div>
<% end %>